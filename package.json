{
  "name": "telegram-bot",
  "version": "0.1.0",
  "description": "JavaScript project to deliver IM messages via Telegram using an Amazon Web Services (AWS) Lambda.",
  "main": "handler.js",
  "repository": "git@github.com:eosnetworkfoundation/telegram-bot.git",
  "homepage": "https://github.com/eosnetworkfoundation/telegram-bot",
  "author": {
    "name": "EOS Network Foundation Automation",
    "email": "zach.butler+telegram-bot@eosnetwork.com",
    "url": "https://eosnetwork.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "scripts/build.sh",
    "lint": "eslint .",
    "reset": "scripts/reset.sh",
    "test": "jest --coverage"
  },
  "files": [
    "handler.js",
    "is.js"
  ],
  "dependencies": {
    "axios": "^1.4.0",
    "joi": "^17.10.2",
    "moment-timezone": "^0.5.43"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.2",
    "serverless": "^3.34.0"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
      "arrow-parens": "off",
      "comma-dangle": "warn",
      "default-param-last": "off",
      "import/extensions": "off",
      "import/order": "off",
      "indent": [
        "error",
        4
      ],
      "max-len": "off",
      "no-console": "off",
      "no-plusplus": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "warn",
      "object-curly-spacing": "off"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "coverage",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "coverage",
      "node_modules"
    ]
  }
}
